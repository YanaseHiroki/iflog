<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードを再設定する", new_password_path(resource_name), class: "hyper-link" %>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "認証のメールを送る", new_confirmation_path(resource_name), class: "hyper-link" %>>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "ロック解除のメールを送る", new_unlock_path(resource_name), class: "hyper-link" %>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "#{OmniAuth::Utils.camelize(provider)}でサインインする", omniauth_authorize_path(resource_name, provider), class: "hyper-link" %>
  <% end %>
<% end %>
