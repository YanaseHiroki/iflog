<%= render "shared/header" %>
<main>
  <div class="main">
    <div class="title-container">
      <h1 class="title">ユーザー名を変更する</h1>
    </div>
    <%= form_with  model: @user, local: true do |f| %>
      <div class="field">
        <%= f.label :name %>(16文字以下)
        <%= f.text_area :name, placeholder:"16文字以下", class:"textarea", autofocus: true, autocomplete: "name", maxlength:"16" %>
      </div>
      <%= render 'shared/error_messages', model: f.object %>
      <div class="actions">
        <%= f.submit "　保存　" %>
      </div>
    <% end %>
  </div>
</main>
