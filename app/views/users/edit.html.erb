<%= render "shared/header" %>
<main>
  <div class="main">
    <div class="title-container">
      <h1 class="title">ユーザー名と画像を変更する</h1>
    </div>
    <%= form_with  model: @user, local: true do |f| %>
      <div class="field">
        <%= f.label :name %>
        <%= f.text_area :name, placeholder:"必須", class:"textarea", autofocus: true, autocomplete: "name" %>
      </div>
      <div class="field">
        <%= f.label :image %>
        <%= f.file_field :image, autocomplete: "image" %>
      </div>
      <div class="image">
      <% if @user.image.attached? %>
        <%= image_tag @user.image %>
      <% else %>
        <%= image_tag 'latte-art.jpg' %>
      <% end %>
      </div>
      <div class="actions">
        <%= f.submit "　保存　" %>
      </div>
    <% end %>
  </div>
</main>
